        <TextBox x:Name="FirstArgument" Height="36" VerticalAlignment="Top" Margin="221,108,156,0"/>
        <TextBox x:Name="SecondArgument" Height="36" VerticalAlignment="Top" Margin="221,148,156,0"/>

        <Button Content="+" VerticalAlignment="Top" Margin="395,131,93,0" Click="OnPlusClicked" Height="35"/>
